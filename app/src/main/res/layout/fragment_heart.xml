<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tl="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment.HeartFragment"
    android:background="#fff">
<LinearLayout

    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:orientation="horizontal">
    <View
        android:layout_width="0dp"
        android:layout_height="match_parent"
    android:layout_weight="1"

        />
    <com.flyco.tablayout.SlidingTabLayout
        android:id="@+id/slidingTabLayout"
        android:layout_width="140dp"
        android:layout_height="48dp"
        tl:tl_textsize="18sp"
        tl:tl_textBold="SELECT"
        tl:tl_divider_color="#1AFFFFFF"
        tl:tl_divider_padding="2dp"
        tl:tl_divider_width="1dp"
        tl:tl_indicator_color="#24CCA9"
        tl:tl_tab_padding="2dp"
        tl:tl_indicator_height="2dp"
        tl:tl_indicator_width_equal_title="true"
        tl:tl_tab_space_equal="true"
        tl:tl_textSelectColor="#24CCA9"
        tl:tl_textUnselectColor="#000"
        tl:tl_underline_color="#fff"
        tl:tl_underline_height="1dp" />
    <View
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"

        />

</LinearLayout>
    <View
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:background="#EAEAEA"/>
    <androidx.viewpager.widget.ViewPager

        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

</LinearLayout>