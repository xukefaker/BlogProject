<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tl="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment.HomeFragment"
    android:background="#fff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_region"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:drawableRight="@drawable/ic_main_xia"
                android:text="南昌市"
                android:textColor="#000"

                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <LinearLayout
                android:id="@+id/search"
                android:layout_width="200dp"
                android:layout_height="39dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/shape_search_box"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_marginLeft="13dp"
                    android:layout_marginRight="11dp"
                    android:src="@drawable/ic_search" />

                <TextView
                    android:id="@+id/editText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="30dp"
                    android:background="@null"
                    android:focusable="false"
                    android:gravity="center"
                    android:text="搜索活动、组织等"
                    android:textColor="#737373"
                    android:textSize="15sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:background="#fff"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_marginRight="10dp"

                android:gravity="right"
                android:text="131,982"
                android:textColor="#24CBA9"
                android:textSize="25sp"
                android:layout_marginTop="10dp"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="18dp"
                android:layout_weight="1"
                android:gravity="left"
                android:text="志愿者"
                android:textColor="#000"
                android:textSize="15sp" />
 <LinearLayout
     android:layout_width="130dp"
     android:layout_height="match_parent"
     android:background="#fff"
     android:orientation="horizontal"
     android:layout_marginRight="20dp"
      >
            <com.flyco.tablayout.SlidingTabLayout
                android:id="@+id/slidingTabLayout"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                tl:tl_textsize="20sp"
                tl:tl_textBold="BOTH"
                tl:tl_divider_color="#1AFFFFFF"
                tl:tl_divider_padding="2dp"
                tl:tl_divider_width="1dp"
                tl:tl_indicator_color="#24CCA9"
                tl:tl_tab_padding="5dp"
                tl:tl_indicator_height="2dp"
                tl:tl_indicator_width_equal_title="true"
                   tl:tl_tab_space_equal="true"
                tl:tl_textSelectColor="#24CCA9"
                tl:tl_textUnselectColor="#000"
                tl:tl_underline_color="#fff"
                tl:tl_underline_height="1dp" />
        </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <androidx.viewpager.widget.ViewPager

        android:id="@+id/fixedViewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>


</LinearLayout>